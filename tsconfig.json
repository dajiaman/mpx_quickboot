{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": "./",
    "lib": ["esnext", "dom", "dom.iterable"],
    "paths": {
      "@/*": ["./src/*"],
      "/#/*": ["types/*"]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "types/**/*.d.ts",
    "types/**/*.ts",
  ],
  "exclude": ["build", "dist", "config", "./node_modules"]
}
